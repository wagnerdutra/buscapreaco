<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="br.com.livroandroid.buscapreco.fragment.CategoriaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewSup"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/supermercado"/>

                        <TextView
                            android:id="@+id/txSup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Supermercado"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewAço"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    android:layout_margin="6dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/acougue"/>

                        <TextView
                            android:id="@+id/txAço"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Açougue"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewRes"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_gravity="end"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/restaurante"/>

                        <TextView
                            android:id="@+id/txRes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Restaurante"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewLan"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/lanchonete"/>

                        <TextView
                            android:id="@+id/txLan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Lanchonete"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewPiz"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    android:layout_margin="6dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/pizzaria"/>

                        <TextView
                            android:id="@+id/txPiz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Pizzaria"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewCerv"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/cervejaria"/>

                        <TextView
                            android:id="@+id/txCerv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Cervejaria"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewMat"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/materiais"/>

                        <TextView
                            android:id="@+id/eTipo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Materiais"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewFar"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    android:layout_margin="6dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2"
                    android:layout_gravity="end">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/farmacia"/>

                        <TextView
                            android:id="@+id/txFar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Farmácia"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/tools"
                    android:id="@+id/card_viewLoj"
                    android:layout_width="105dp"
                    android:layout_height="110dp"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="false"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="6dp"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/loja"/>

                        <TextView
                            android:id="@+id/eTipo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Lojas"
                            android:textSize="10dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>